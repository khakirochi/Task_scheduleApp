<h1>スケジュール編集</h1>
<%= render "shared/errors", obj: @task %>

<%= form_for @task do |f| %>
<table class="task_content edit_table">
  <tr>
    <th><%= f.label :title, "タイトル"%></th>
    <td><%= f.text_field :title%></td>
  </tr>
  <tr>
    <th><%= f.label :start_date, "開始日"%></th>
    <td><%= f.date_field :start_date%></td>
  </tr>
  <tr>
    <th><%= f.label :end_date, "終了日"%></th>
    <td><%= f.date_field :end_date%></td>
  </tr>
  <tr>
    <th><%= f.label :is_all_day, "終日"%></th>
    <td>
      <%= f.check_box :is_all_day %>
      <br>
      終日の場合にはチェックを入れます
    </td>
  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ"%></th>
    <td><%= f.text_area :memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールの編集を完了する" %></li>
    <li><%= link_to "スケジュール一覧に戻る", tasks_path %></li>
  </ul>
</div>
<% end %>