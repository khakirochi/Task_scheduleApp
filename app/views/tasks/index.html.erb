<h1>スケジュール一覧</h1>


<table class="main_table">
  <thead>
    <tr class="main_table_header">
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= task.title %></td>
      <td><%= task.start_date.to_s(:date_jp) %></td>
      <td><%= task.end_date.to_s(:date_jp) %></td>
      <% if task.is_all_day %><td>○</td><% else %><td></td><% end %>
      <td><%= task.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to "確認", task_path(task.id) %></td>
      <td><%= link_to "編集", edit_task_path(task.id) %></td>
      <td><%= link_to "削除", task_path(task.id), method: :delete , data: {confirm: "本当に削除しますか？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<p><%= link_to "スケジュール新規登録", new_task_path%></p>