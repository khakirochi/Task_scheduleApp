<h1>スケジュール詳細</h1>
<table class="task_content">
  <tr>
    <th>タイトル</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @task.start_date.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @task.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <% if @task.is_all_day%>
    <td>○</td>
    <% else %>
    <td></td>
    <% end %>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @task.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", tasks_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_task_path(@task.id) %></li>
    <li><%= link_to "スケジュールを削除", task_path(@task.id), method:"delete"  %></li>
  </ul>
</div>